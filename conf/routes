# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# Home page
GET     /                           controllers.Application.index

GET     /testpage                   controllers.Application.default(out: String ?= " ")

#Static
GET     /test/all                   controllers.Application.list

#Dynamic
GET     /test/show/id               controllers.Application.show(id: Int)

#Fixed
GET     /test                       controllers.Application.default(out = "Fixed Value!")

#Default
GET     /test/default               controllers.Application.default(out: String ?= "Default")

#Simple Redirect
GET     /test/x                     controllers.Application.redirect

#Reverse route
GET     /plannedUpdates             controllers.Application.plannedUpdates

#Same routes
GET     /test/same                  controllers.Application.sameO
GET     /test/same                  controllers.Application.same
#TODO
GET     /test/todo                  controllers.Application.implement

#Cookies
GET     /test/cookieboys            controllers.Application.cookie
GET     /test/cookiechange          controllers.Application.cookieChange
GET     /test/connected             controllers.Application.connected

#Flash
GET     /test/flash                 controllers.Application.flash
GET     /misc/fl                    controllers.Application.flashr

GET     /test/logout                controllers.Application.delCookie

GET     /items                      controllers.ItemApp.listItems
POST    /items                      controllers.ItemApp.createItem
GET     /items/del                  controllers.ItemApp.deleteItem
GET     /items/edit                 controllers.ItemApp.editItem

#File serve
GET     /items/pdf                  controllers.ItemApp.fileRename
GET     /items/pdf2                 controllers.ItemApp.fileServeCL
GET     /items/pdf3                 controllers.ItemApp.fileAttachment
GET     /ideas/chunked              controllers.ItemApp.chunked
GET     /items/chunkedfs            controllers.ItemApp.chunkedFromSource

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


    